@page
@using CoreLayer.Utilities;
@model BlogWeb.Areas.Admin.Pages.Post.IndexModel

@{
    ViewData["Title"] = "مدیریت پست ها";
    var counter = 1;
}
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>

</section>
<section class="content">
   
    <a class="btn btn-success" style="margin-bottom: 5px" asp-page="Add">افزودن مقاله</a>
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>عنوان</th>
                        <th>slug</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Posts)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>
                                <img style="max-width: 150px" src="@Directories.GetPostImage(item.ImagePost)" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Slug</td>

                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">ویرایش</a>
                            </td>
                            <td>
                                <form method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>

                        </tr>

                        counter += 1;
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>