@page
@model BlogWeb.Areas.Admin.Pages.Post.AddModel
@{
    ViewData["title"] = "افزودن پست";
}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-page="../Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a asp-page="Index">مقالات</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <form class="box box-danger" method="post" enctype="multipart/form-data">
        <div class="box-body row">
            <div class="col-md-6">
                @Html.EditorFor(m => m.Title)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(m => m.Slug)
            </div>
            <div class="col-md-12">
                @Html.EditorFor(m => m.Description)
            </div>

            <div class="col-md-6">
                @Html.EditorFor(m => m.ImageFile)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(m => m.ImageAlt)
            </div>

        </div>
        <div class="box-footer">
            <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</section>