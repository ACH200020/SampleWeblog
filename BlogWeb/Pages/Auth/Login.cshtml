@page
@model BlogWeb.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<!-- Login page -->
<div class="login_wrapper">
    <div class="login_box">
        <h3 style="margin: 10px auto; color: #FF574D">ورود</h3>
        <div class="login_form">
            <div class="login_form_inner">
                <!-- <h3>Login to <span>your account</span></h3> -->
                <ul class="login_tab">
                    <li><a class="active"> ورود</a></li>
                    <li><a asp-page="Register"> عضویت</a></li>
                </ul>

                <form method="post">
                    <div class="form-group">
                        <input asp-for="PhoneNumber" type="text" name="phonenumber" class="input-text" placeholder="شماره تلفن">
                        <span asp-validation-for="PhoneNumber" style="color: red"></span>

                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" name="Password" class="input-text" placeholder="رمزعبور">
                        <span asp-validation-for="Password" style="color: red"></span>

                    </div>
                    <div class="checkbox clearfix">
                        <a asp-page="ForgotPassword">فراموشی رمزعبور</a>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-md btn-theme btn-block">ورود<i class="fa fa-arrow-left"></i></button>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>